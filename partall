<!DOCTYPE HTML>
<html>
<head>
<meta charset="UTF-8"/>
<title>Walla</title>
<script>
window.onload=oppstart;

function oppstart(){

 document.getElementById("btnsett").onclick=sett;
}
function sett(){
  var tall= document.getElementById("texttall").value);
if(tall % 2 === 0){
  document.getElementById("melding").style.color="red";
}
else{
  document.getElementById("melding").style.color="green";
}
}
</script>
</head>
<body>

  <input type="text" id="txttall"/><br/>
  <button type="button" id="btnsett">Sett</button>

	<h1 id="melding">God morgen</h1>
</body>
</html>